{
    "name": "project-template",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "update": "npx npm-check-updates -u && npm install",
        "dev": "webpack serve --open --config webpack.dev.js",
        "build": "webpack --config webpack.prod.js",
        "test": "jest",
        "pretest": "npm run type-check",
        "test:watch": "jest --watch",
        "type-check": "tsc --noEmit",
        "lint": "eslint src",
        "pretty": "prettier --write 'src/**/*.{js,ts,jsx,tsx,json,md}'",
        "lint:all": "eslint .",
        "pretty:all": "prettier --write --no-hidden '**/*.{js,ts,jsx,tsx,json,md}'",
        "prepush": "npm run lint:all && npm run pretty:all && npm test",
        "push": "git add . && git commit -m",
        "postpush": "git push origin main",
        "predeploy": "git branch gh-pages || true",
        "deploy": "git checkout gh-pages && git merge main --no-edit && npm run build && git add dist -f && git commit -m 'Deployment commit' && git subtree push --prefix dist origin gh-pages --force && git checkout main"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@babel/core": "^7.26.7",
        "@babel/plugin-proposal-class-properties": "^7.18.6",
        "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
        "@babel/preset-env": "^7.26.9",
        "@babel/preset-typescript": "^7.26.0",
        "@eslint/js": "^9.19.0",
        "babel-jest": "^29.7.0",
        "babel-loader": "^9.2.1",
        "css-loader": "^7.1.2",
        "eslint": "^8.57.1",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-import": "^2.31.0",
        "html-loader": "^5.1.0",
        "html-webpack-plugin": "^5.6.3",
        "jest": "^29.7.0",
        "prettier": "3.4.2",
        "style-loader": "^4.0.0",
        "ts-jest": "^29.2.6",
        "webpack": "^5.97.1",
        "webpack-cli": "^6.0.1",
        "webpack-dev-server": "^5.2.0",
        "webpack-merge": "^6.0.1"
    }
}
